.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "/"} Kogsa@UVA
      .nav-collapse
        %ul.nav
          %li{:class => is_active('home')}
            %a{:href => "/"}
              %i.icon-home.icon-white>
              Home
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
              About
              %b.caret
            %ul.dropdown-menu
              %li{:class => is_active('uva')}
                %a{:href => "/uva"} Intro to UVA
              %li{:class => is_active('ksa')}
                %a{:href => "/ksa"} KSA
              %li{:class => is_active('kogsa')}
                %a{:href => "/kogsa"} KOGSA
              %li{:class => is_active('making')}
                %a{:href => "/making"} Making Story
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
              Info
              %b.caret
            %ul.dropdown-menu
              %li{:class => is_active('qna')}
                %a{:href => "/qna"} Q & A
              %li{:class => is_active('recruit')}
                %a{:href => "/recruit"} Recruiting
              %li{:class => is_active('living')}
                %a{:href => "/living"} Living Info
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
              For Members
              %b.caret
            %ul.dropdown-menu
              - Board.all.each do |board|
                %li=link_to board.name, board
              / %li{:class => is_active('ksafree')}
              /   %a{:href => "/board"} KSA Freeboard
              / %li{:class => is_active('kogsafree')}
              /   %a{:href => "/kogsafree"} KOGSA Freeboard
              / %li{:class => is_active('market')}
              /   %a{:href => "/market"} Market
              / %li{:class => is_active('gallery')}
              /   %a{:href => "/gallery"} Gallery
          %li{:class => is_active('organization')}
            %a{:href => "/organization"}
              Organization
          %li{:class => is_active('sponsor')}
            %a{:href => "/sponsor"}
              Sponsor
          %li{:class => is_active('contact')}
            %a{:href => "/contact"}
              Contact
        /
          <form class="navbar-search pull-right" action="">
          <input type="text" class="search-query span2" placeholder="Search">
          </form>
        %ul.nav.pull-right
          - if user_signed_in?
            %li
              = link_to('Logout', destroy_user_session_path, :method=>'delete')
          - else
            %li
              = link_to('Login', new_user_session_path)
          - if user_signed_in?
            %li
              = link_to('Edit account', edit_user_registration_path)
          - else
            %li
              = link_to('Sign up', new_user_registration_path)
      / /.nav-collapse
    / /.container
  / /.navbar-inner
/ /.navbar